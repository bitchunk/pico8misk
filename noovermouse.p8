function _draw()
	cls()
	?'DX'..dx..' DY'..dy..'\n'..'X'..mx..' Y'..my

	mx,my=mid(0,127,mx+flr(dx+0.5))
						,mid(0,127,my+flr(dy+0.5))

	if stat(34)==0 then
		dx,dy=stat(38)/10
							,stat(39)/10
	else
		dx,dy=dx/1.4+stat(38)/20
							,dy/1.4+stat(39)/20
	end
	spr(32,mx,my)
end
